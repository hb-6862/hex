#!/bin/bash
 
 # Elegant Power-Off Script
 
 clear
 echo -e "\e[1;35m"
 echo "╔══════════════════════════════╗"
 echo "║     System Powering Off      ║"
 echo "╚══════════════════════════════╝"
 echo -e "\e[0m"
 
 # Countdown
 for i in {5..1}; do
   echo -e "\e[1;33mShutting down in $i...\e[0m"
   sleep 1
 done
 
 echo -e "\e[1;32mGoodbye!\e[0m"
 sleep 1
clear
 
 # Execute shutdown
  echo -e "\e[1;35m"
 echo "╔═════=═════════════════════════╗"
 echo "║      Made you look            ║"
 echo "╚══════════════════════════=════╝"
 echo -e "\e[0m"
 

#javascript client terminal in cockpit  vulnerability
